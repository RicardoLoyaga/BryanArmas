<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BryanArmas.Login">
    <ContentPage.Content>
        <StackLayout>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Source="logo.png" Scale="1" Grid.Row="0"/>
                <Label Text="Usuario: " Grid.Row="1" />
                <Entry x:Name="txtUser" Grid.Row="2"/>
                <Label Text="Contraseña: " Grid.Row="3" />
                <Entry x:Name="txtPass" Grid.Row="4" IsPassword="True"/>
                <Button x:Name="btnLogin" BackgroundColor="Green" Grid.Row="5" Clicked="btnLogin_Clicked" Text="LOGIN" 
                        TextColor="White" CornerRadius="18"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>